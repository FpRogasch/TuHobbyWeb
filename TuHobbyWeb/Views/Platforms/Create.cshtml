@model TuHobbyWeb.Models.ViewModels.PlatformCreateViewModel
@{

}

<div class="card">
    <div class="card-header">
        <h3>Agregar Plataforma</h3>
    </div>
    <div class="card-body">
        <form action="/Platforms/Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Nombre:</label>
                <input type="text" name="ProductPlatformName" class="form-control" value="@Model.ProductPlatformName" />
            </div>
            <div class="form-group">
                <label>Logo:</label>
                <input type="file" name="PlatformFile"/>
            </div>

            <button type="submit" class="btn btn-success btn-block">Enviar</button>
        </form>
    </div>
</div>