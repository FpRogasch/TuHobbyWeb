@using TuHobbyWeb.Helpers;
@model TuHobbyWeb.Models.Entities.User
@{
    ViewBag.Title = $"{Model.FullName}";
}

<div class="card">
    <div class="card-header">
        <h2>Perfil de @Model.FullName</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-6">
                <label>Nombre:</label>
                <input type="text" aria-label="Nombre" class="form-control" value="@Model.FirstName" disabled>
            </div>
            <div class="col-sm-6">
                <label>Apellido:</label>
                <input type="text" aria-label="Apellido" class="form-control" value="@Model.LastName" disabled>
            </div>
        </div>
        <div class="mt-3">
            <label>Email:</label>
            <input type="email" aria-label="Email" class="form-control" value="@Model.EmailAddress" disabled>
        </div>
        @if (User.Identity.IsAuthenticated && User.IsInRole(StringHelper.ROLE_ADMINISTRATOR))
        {
            <hr />
            <h4>Datos Asignatura</h4>
            <div class="row mt-3">
                <div class="col-sm-6">
                    <label>Profesor:</label>
                    <input type="text" aria-label="Address" class="form-control" value="@Model.Address" disabled>
                </div>
                <div class="col-sm-6">
                    <label>Asignatura:</label>
                    <input type="text" aria-label="Descriptiom" class="form-control" value="@Model.Descriptiom" disabled>
                </div>
            </div>
            <a href="/dashboard" class="btn btn-block btn-info mt-3">Panel de Control <i class="fas fa-sign-in-alt"></i></a>
        }
    </div>
</div>




