@model List<TuHobbyWeb.Models.Entities.Product>
@{ 
    ViewBag.Title = "Gestión de Productos";
}


@if (Model != null && Model.Count > 0)
{
    <div class="card mt-5">
        <div class="card-header">
            <div class="row">
                <div class="col-8">
                    <h3>@ViewBag.Title</h3>
                </div>
                <div class="col-4">
                    <a href="/product/create" class="btn btn-success float-right">Agregar Producto</a>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th></th>
                </tr>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.ProductCode</td>
                        <td>@item.ProductName</td>
                        <td>@item.ProductPrice</td>
                        <td>@item.ProductStock</td>
                        <td>
                            <a href="/product/show?productId=@item.ProductId" class="btn btn-outline-info">Editar</a>
                            <a href="/product/delete?productId=@item.ProductId" class="btn btn-outline-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}
else 
{ 
    <div class="alert alert-danger">
        <p>
            Aún no se han registrado productos <a href="/product/create">Crea uno aquí</a>
        </p>
    </div>
}